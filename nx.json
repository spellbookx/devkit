{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "namedInputs": {
    "default": [
      "{projectRoot}/**/*",
      "!{projectRoot}/dist/**",
      "!{projectRoot}/README.md",
      "!{projectRoot}/CHANGELOG.md",
      "!{projectRoot}/**/*.spec.*",
      "sharedGlobals"
    ],
    "production": [
      "default",
      "!{projectRoot}/**/*.test.*",
      "!{projectRoot}/**/*.spec.*",
      "!{projectRoot}/jest.*",
      "!{projectRoot}/vitest.*"
    ],
    "sharedGlobals": [
      "{workspaceRoot}/LICENSE",
      "{workspaceRoot}/tsconfig.base.json",
      "{workspaceRoot}/package.json"
    ]
  },
  "plugins": [
    {
      "plugin": "@nx/js/typescript",
      "options": {
        "typecheck": {
          "targetName": "typecheck"
        },
        "build": {
          "targetName": "build",
          "configName": "tsconfig.lib.json",
          "buildDepsName": "build-deps",
          "watchDepsName": "watch-deps"
        }
      }
    }
  ],
  "generators": {
    "@nx/plugin:plugin": {
      "compiler": "tsc",
      "e2eTestRunner": "none",
      "unitTestRunner": "none",
      "linter": "none",
      "publishable": false,
      "skipLintChecks": true
    },
    "@nx/plugin:executor": {
      "skipLintChecks": true,
      "unitTestRunner": "none"
    },
    "@nx/plugin:generator": {
      "skipLintChecks": true,
      "unitTestRunner": "none"
    },
    "@nx/js:library": {
      "bundler": "tsc",
      "includeBabelRc": false,
      "linter": "none",
      "minimal": true,
      "publishable": false,
      "strict": true,
      "unitTestRunner": "none"
    }
  },
  "targetDefaults": {
    "@nx/js:tsc": {
      "cache": true,
      "dependsOn": ["^build"],
      "inputs": ["production", "^production"],
      "outputs": ["{projectRoot}/dist"]
    }
  },
  "release": {
    "projects": ["packages/*"],
    "projectsRelationship": "fixed",
    "version": {
      "conventionalCommits": true,
      "preVersionCommand": "npm install && nx run-many -t build"
    },
    "changelog": {
      "workspaceChangelog": false,
      "projectChangelogs": {
        "createRelease": "github",
        "file": false
      }
    },
    "git": {
      "commit": true,
      "stageChanges": true,
      "tag": true,
      "push": true
    }
  }
}
