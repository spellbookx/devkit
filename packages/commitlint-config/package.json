{
  "name": "@spellbookx/commitlint-config",
  "version": "0.21.3",
  "private": false,
  "description": "spellbookx commitlint shared config",
  "keywords": [
    "commitlint",
    "commitlint-config"
  ],
  "homepage": "https://github.com/spellbookx/devkit#readme",
  "bugs": {
    "url": "https://github.com/spellbookx/devkit/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/spellbookx/devkit.git",
    "directory": "packages/commitlint-config"
  },
  "license": "MIT",
  "type": "module",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "@spellbookx/source": "./src//index.ts",
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "LICENSE"
  ],
  "dependencies": {
    "tslib": "^2.3.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@commitlint/types": "^20.0.0",
    "@types/node": "^20.19.9",
    "conventional-changelog-conventionalcommits": "^7.0.2",
    "tsdown": "^0.15.9",
    "typescript": "^5.9.3"
  },
  "publishConfig": {
    "access": "public"
  },
  "nx": {
    "name": "commitlint-config",
    "tags": [
      "scope:tool",
      "tool:commitlint"
    ],
    "targets": {
      "build": {
        "executor": "nx:run-commands",
        "inputs": [
          "production"
        ],
        "outputs": [
          "{projectRoot}/dist"
        ],
        "options": {
          "cwd": "{projectRoot}",
          "parallel": false,
          "commands": [
            "tsdown"
          ]
        }
      },
      "watch": {
        "executor": "nx:run-commands",
        "inputs": [
          "default"
        ],
        "options": {
          "cwd": "{projectRoot}",
          "commands": [
            "tsdown --watch"
          ]
        }
      }
    }
  }
}
