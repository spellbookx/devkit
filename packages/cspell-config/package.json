{
  "name": "@spellbookx/cspell-config",
  "version": "0.21.6",
  "private": false,
  "description": "spellbookx cSpell shared config",
  "keywords": [
    "spellbookx",
    "cspell",
    "cspell-config"
  ],
  "homepage": "https://github.com/spellbookx/devkit#readme",
  "bugs": {
    "url": "https://github.com/spellbookx/devkit/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/spellbookx/devkit.git",
    "directory": "packages/cspell-config"
  },
  "license": "MIT",
  "type": "module",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "@spellbookx/source": "./src/index.ts",
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "LICENSE"
  ],
  "dependencies": {
    "tslib": "^2.3.0"
  },
  "devDependencies": {
    "@cspell/cspell-types": "^9.2.1",
    "@types/node": "^24.9.1",
    "tsdown": "^0.15.9",
    "typescript": "^5.9.3"
  },
  "peerDependencies": {
    "cspell": "^9.2.2"
  },
  "publishConfig": {
    "access": "public"
  },
  "nx": {
    "name": "cspell-config",
    "tags": [
      "scope:tool",
      "tool:cspell"
    ],
    "targets": {
      "build": {
        "executor": "nx:run-commands",
        "inputs": [
          "production"
        ],
        "outputs": [
          "{projectRoot}/dist"
        ],
        "options": {
          "cwd": "{projectRoot}",
          "parallel": false,
          "commands": [
            "tsdown"
          ]
        }
      },
      "watch": {
        "executor": "nx:run-commands",
        "inputs": [
          "default"
        ],
        "options": {
          "cwd": "{projectRoot}",
          "commands": [
            "tsdown --watch"
          ]
        }
      }
    }
  }
}
