{
  "name": "@spellbookx/source",
  "version": "0.0.0",
  "private": true,
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "nx run-many -t build",
    "commit": "cz",
    "fmt:check": "prettier . --check",
    "fmt:fix": "prettier . --write",
    "lint:check": "eslint .",
    "lint:fix": "eslint --fix .",
    "lint:fmt": "npm run lint:fix && npm run fmt:fix",
    "nx:agents": "nx configure-ai-agents",
    "nx:agents:check": "nx configure-ai-agents --check",
    "nx:agents:upgrade": "nx configure-ai-agents --agents codex gemini",
    "nx:daemon:start": "nx daemon --start",
    "nx:migrate": "nx migrate --run-migrations=migrations.json --if-exists && npm install",
    "nx:repair": "nx repair",
    "nx:reset": "nx reset",
    "nx:sync": "nx sync",
    "nx:upgrade": "nx migrate latest",
    "prepare": "lefthook install"
  },
  "config": {
    "commitizen": {
      "path": "git-cz"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@cspell/eslint-plugin": "^9.2.1",
    "@eslint/js": "^9.38.0",
    "@eslint/json": "^0.13.2",
    "@eslint/markdown": "^7.4.1",
    "@nx/js": "21.6.5",
    "@swc-node/register": "^1.11.1",
    "@swc/core": "^1.13.5",
    "@swc/helpers": "^0.5.17",
    "commitizen": "^4.3.1",
    "cspell": "^9.2.1",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsdoc": "^61.1.5",
    "eslint-plugin-node-dependencies": "^1.2.0",
    "eslint-plugin-package-json": "^0.57.0",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-unicorn": "^61.0.2",
    "git-cz": "^4.9.0",
    "globals": "^16.4.0",
    "jsonc-eslint-parser": "^2.4.1",
    "lefthook": "^2.0.0",
    "nx": "21.6.5",
    "prettier": "^3.6.2",
    "prettier-plugin-ini": "^1.3.0",
    "prettier-plugin-packagejson": "^2.5.19",
    "prettier-plugin-properties": "^0.3.0",
    "prettier-plugin-sh": "^0.18.0",
    "prettier-plugin-toml": "^2.0.6",
    "tsdown": "^0.15.9",
    "tslib": "^2.3.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.2"
  }
}
